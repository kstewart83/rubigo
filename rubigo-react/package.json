{
  "name": "rubigo-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "RUBIGO_AUTO_INIT=true RUBIGO_SHOW_COMMIT=true bun --bun next dev --turbopack",
    "dev:clean": "RUBIGO_SHOW_COMMIT=true bun --bun next dev --turbopack",
    "dev:mmc": "bun src/scripts/dev-mmc.ts",
    "dev:sync": "RUBIGO_SEED_DIR=../common/scenarios/mmc bun run src/db/sync.ts --watch",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "eslint .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "generate:api": "openapi-typescript ../common/schemas/project.openapi.yaml -o src/types/api.generated.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "RUBIGO_SEED_DIR=../common/scenarios/mmc bun src/db/seed.ts",
    "db:sync": "RUBIGO_SEED_DIR=../common/scenarios/mmc bun src/db/sync.ts",
    "db:sync:watch": "RUBIGO_SEED_DIR=../common/scenarios/mmc bun src/db/sync.ts --watch",
    "db:clean": "bun src/db/clean.ts",
    "db:studio": "drizzle-kit studio",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:full": "bun scripts/run-e2e.ts",
    "pre-push-check": "bun scripts/pre-push-check.ts",
    "deploy:monitor": "bun scripts/deploy-monitor.ts",
    "incident:triage": "bun scripts/incident-triage.ts",
    "wip:init": "bun scripts/wip-init.ts"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@scure/bip39": "^2.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "openapi-typescript": "^7.10.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}